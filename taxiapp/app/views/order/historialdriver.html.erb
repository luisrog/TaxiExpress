<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Mis Carreras</h1>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Origen</th>
                        <th>Destino</th>
                        <th>Referencia</th>
                        <th>Estado</th>
                        <th>Estimado</th>
                        <th>Pago</th>
                        <th>Inicio</th>
                        <th>Fin</th>
                        <th>Importe</th>
                    </tr>
                </thead>
                <tbody>
                    <% @orders.each(:as => :hash) do |row, index| %>
                    <tr>
                        <td><%= row["address_origin"] %></td>
                        <td><%= row["address_destination"] %></td>
                        <td><%= row["reference"] %></td>
                        <td><%= row["state"] %></td>
                        <td><%= row["time_estimated"] %> min aprox.</td>
                        <td><%= row["payment_type"] %></td>
                        <td><%= row["start_time"] %></td>
                        <td><%= row["end_time"] %></td>
                        <td>S/. <%= row["amount"] %></td>
                    </tr>    
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
