<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h2 class="text-center"><i class="fa fa-user-secret fa-4x" ></i><br>LOGIN</h2>
            </div>
            <div class="modal-body row">
                <h6 class="text-center">COMPLETA ESTOS CAMPOS PARA INGRESAR</h6>
                <%= form_for @user, :html => {:class => "col-md-10 col-md-offset-1 col-xs-12 col-xs-offset-0"}, url: user_login_path(@user) do |f| %>
                    <div class="form-group">
                        <%= f.text_field :email,  :class => 'form-control', :placeholder => 'Email' %>
                    </div>
                    <div class="form-group">
                        <%= f.password_field :passwd,  :class => 'form-control', :placeholder => 'Password' %>
                    </div>
                    <div class="form-group">
                        <%= f.submit 'Ingresa', :class => 'btn btn-primary btn-lg btn-block' %>
                        <span class="pull-right"></span><span><a href="#">Ayuda?</a></span>
                    </div>
                <% end %>
            </div>
            <div class="modal-footer">
                <h6 class="text-center"><a href="">La privacidad es importante para nosotros.</a></h6>
            </div>
        </div>
    </div>
</div>